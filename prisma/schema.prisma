generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  coverImage  String?
  isFeatured  Boolean  @default(false)
  status      String   @default("draft") // draft, published
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Awardee {
  id       String   @id @default(cuid())
  slug     String   @unique
  name     String
  email    String?
  country  String?
  cgpa     String?  // Can store as string to handle various formats
  course   String?
  bio      String?
  year     Int?     // Year the awardee was recognized
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
